generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EventCategory {
  CONFERENCE
  MEETUP
  WORKSHOP
  WEBINAR
  SOCIAL
}

model Event {
  id          String        @id @default(uuid())
  title       String
  location    String
  description String
  eventDate   DateTime
  category    EventCategory @default(CONFERENCE)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([eventDate])
}
